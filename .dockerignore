# Ignore node_modules to prevent platform-specific binaries from being copied
# Docker will install fresh dependencies for the target platform (Linux Alpine)
node_modules/
**/node_modules/

# Ignore build outputs - will be generated in container
dist/
**/dist/
build/
**/build/

# Ignore test outputs and coverage
test-results/
**/test-results/
playwright-report/
**/playwright-report/
coverage/
**/coverage/
*.log

# Ignore local environment files
.env
.env.local
.env.*.local

# Ignore git files
.git/
.gitignore

# Ignore IDE files
.vscode/
.idea/
*.swp
*.swo

# Ignore temporary files
*.tmp
.DS_Store
Thumbs.db
